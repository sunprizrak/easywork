#:import SettingsScreen screens
#:import Window kivy.core.window.Window

<LeftLabel@MDLabel>
    size_hint_x: None
    width: dp(300)
    pos_hint: {'center_y': .5}
    padding_x: dp(30)
    adaptive_height: True

<SettingsScreen>
    name: 'settings_screen'
    md_bg_color: app.theme_cls.bg_light

    MDFloatLayout:

        MDTopAppBar:
            id: top_bar
            md_bg_color: root.md_bg_color
            left_action_items: [['home', lambda x: root.open_main_screen()]]
            pos_hint: {'top': 1}
            elevation: 0

        MDBoxLayout:
            orientation: 'vertical'
            padding: dp(10)
            spacing: dp(10)
            size_hint_y: None
            height: Window.height - top_bar.height - button_box.height
            pos_hint: {'center_y': .5}

            MDBoxLayout:
                orientation: 'horizontal'
                spacing: dp(10)
                adaptive_size: True

                LeftLabel:
                    text: 'API Key Google Sheet:'

                MDIconButton:
                    icon: "plus-circle"
                    theme_text_color: "Custom"
                    color: 'white'
                    pos_hint: {'center_y': .5}
                    on_release:
                        root.file_manager_open(path_google_sheet)

                MDLabel:
                    id: path_google_sheet
                    pos_hint: {'center_y': .5}
                    adaptive_size: True

            MDBoxLayout:
                orientation: 'horizontal'
                spacing: dp(10)
                adaptive_size: True

                LeftLabel:
                    text: 'Folder Path:'

                MDIconButton:
                    icon: "plus-circle"
                    theme_text_color: "Custom"
                    color: 'white'
                    pos_hint: {'center_y': .5}
                    on_release:
                        root.file_manager_open(folder_path)

                MDLabel:
                    id: folder_path
                    pos_hint: {'center_y': .5}
                    adaptive_size: True

            MDBoxLayout:
                orientation: 'horizontal'
                spacing: dp(10)
                adaptive_height: True

                LeftLabel:
                    text: 'Google sheet name:'

                MDTextField:
                    id: google_sheet_name
                    mode: 'rectangle'
                    size_hint_x: None
                    width: dp(300)
                    text_color_normal: 'white'

            MDWidget:

        MDBoxLayout:
            id: button_box
            padding: dp(10)
            size_hint_x: .3
            pos_hint: {'center_x': .5}
            adaptive_height: True

            MDRaisedButton:
                text: "Save"
                font_style: 'Button'
                md_bg_color: "green"
                size_hint_x: 1
                on_release:
                    root.save()

        MDIcon:
            icon: 'cog'
            font_size: sp(200)
            theme_text_color: 'Custom'
            text_color: '#60675B'
            pos_hint: {'center_x': .5, 'center_y': .5}
            opacity: .4